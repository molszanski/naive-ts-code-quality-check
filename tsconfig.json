{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ES6", "ES2015", "ESNEXT", "dom", ],
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "incremental": true,
    "noImplicitAny": false,
    "tsBuildInfoFile": "node_modules/.cache/.tsbuildinfo"
  },
  "exclude": [
    "node_modules",
    "lib",
    "test",
  ]
}
