{
  "name": "naive-ts-code-quality-check",
  "version": "0.1.0",
  "description": "naive typescript code quality checker",
  "main": "./lib/index.js",
  "bin": {
    "naive-ts-code-check": "bin/naive-ts-code-quality-check",
    "ntcqc": "bin/naive-ts-code-quality-check"
  },
  "scripts": {
    "start": "npm run build && npm run installGlobal",
    "test:unit": "mocha src/**/*.spec.ts",
    "rebuild": "rm -rf ./lib && tsc -p .",
    "build": "tsc -p . && chmod +x ./lib/index.js",
    "installGlobal": "yarn global add \"file:$PWD\""
  },
  "dependencies": {
    "@types/yargs": "^17.0.10",
    "shelljs": "^0.8.5",
    "sloc": "^0.2.1",
    "text-table": "^0.2.0",
    "tslib": "^2.4.0",
    "yargs": "^17.4.1"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.27",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "engines": {
    "node": ">=14"
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "arrowParens": "always",
    "trailingComma": "all"
  },
  "license": "MIT",
  "authors": [
    "Nick Olszanski <nick@dinosaurs-with-jetpacks.com>"
  ],
  "homepage": "https://github.com/molszanski/iti",
  "repository": "molszanski/iti",
  "keywords": [
    "javascript",
    "typescript"
  ]
}
